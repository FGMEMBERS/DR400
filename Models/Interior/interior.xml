<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>tour</object-name>
    <object-name>portefusibles</object-name>
    <object-name>sieges</object-name>
    <object-name>ceintures</object-name>
    <object-name>sono</object-name>
    <object-name>bout1</object-name>
    <object-name>bout2</object-name>
    <object-name>mancheG</object-name>
    <object-name>mancheD</object-name>

    <!-- Objets transparents -->
    <object-name>intverriere</object-name>
    <object-name>intverriere2</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intverriere</object-name>
    <object-name>intverriere2</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intverriere</object-name>
    <object-name>intverriere2</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <name>Pilote</name>
    <path>Aircraft/DR400/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.474 </x-m>
      <y-m> -0.251 </y-m>
      <z-m> -0.029 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/DR400/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -1.859 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.099 </z-m>
      <pitch-deg>  -5 </pitch-deg>
    </offsets>
  </model>

  <!-- Les fusibles -->
  <model>
    <path>Aircraft/DR400/Models/Interior/Panel/Instruments/divers/full-fusibles.xml</path>
  </model>

  <!-- Les palonniers -->
  <model>
    <path>Aircraft/DR400/Models/Interior/Panel/Instruments/pedals/pedals.xml</path>
    <offsets>
      <x-m> -2.047 </x-m>
      <y-m> -0.234 </y-m>
      <z-m> -0.225 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/DR400/Models/Interior/Panel/Instruments/pedals/pedals.xml</path>
    <offsets>
      <x-m> -2.047 </x-m>
      <y-m>  0.234 </y-m>
      <z-m> -0.225 </z-m>
    </offsets>
  </model>

  <!-- Animations des manches -->
  <animation>
    <type>rotate</type>
    <object-name>mancheG</object-name>
    <property>controls/flight/elevator</property>
    <factor> 15 </factor>
    <center>
      <x-m> -1.570 </x-m>
      <y-m>  0.234 </y-m>
      <z-m> -0.277 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>mancheD</object-name>
    <property>controls/flight/elevator</property>
    <factor> 15 </factor>
    <center>
      <x-m> -1.570 </x-m>
      <y-m> -0.234 </y-m>
      <z-m> -0.277 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>mancheG</object-name>
    <property>controls/flight/aileron</property>
    <factor> 15 </factor>
    <center>
      <x-m> -1.570 </x-m>
      <y-m> -0.234 </y-m>
      <z-m> -0.277 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>mancheD</object-name>
    <property>controls/flight/aileron</property>
    <factor> 15 </factor>
    <center>
      <x-m> -1.570 </x-m>
      <y-m>  0.234 </y-m>
      <z-m> -0.277 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Canopy -->
  <animation>
    <type>translate</type>
    <object-name>intverriere</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> 0.0 </dep></entry>
      <entry><ind> 1 </ind><dep> 0.8 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

