    <object-name>AllStrobeLight</object-name>
    <condition>
      <property>sim/model/lights/strobe-lights</property>
    </condition>
  </animation>

  <!-- light cone -->
  <model>
    <name>NozeGear</name>
    <path>Aircraft/DR400/Models/light/WhiteLight.xml</path>
    <offsets>
      <x-m> -2.574 </x-m>
      <y-m>  0.074 </y-m>
      <z-m> -0.643 </z-m>
    </offsets>
  </model>

  <model>
    <name>TaxiLight</name>
    <path>Aircraft/DR400/Models/light/light-cone.xml</path>
    <offsets>
      <x-m> -2.574 </x-m>
      <y-m>  0.074 </y-m>
      <z-m> -0.643 </z-m>
      <pitch-deg> -7.500 </pitch-deg>
    </offsets>
  </model>

  <animation>
    <name>AllGearLight</name>
    <object-name>TaxiLight</object-name>
    <object-name>NozeGear</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>AllGearLight</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> 25 </factor>
    <center>
      <x-m> -2.560 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.980 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z> -1 </z>
    </axis>
  </animation>

  <animation>
    <type>select</type>
    <object-name>AllGearLight</object-name>
    <condition>
      <and>
        <property>sim/model/lights/taxi-lights</property>
        <property>sim/model/config/light-cone</property>
      </and>
    </condition>
  </animation>

  <model>
    <name>Wing1-Light</name>
    <path>Aircraft/DR400/Models/light/WhiteLight.xml</path>
    <offsets>
      <x-m> -1.749 </x-m>
      <y-m> -2.091 </y-m>
      <z-m> -0.382 </z-m>
    </offsets>
  </model>

  <model>
    <name>Wing2-Light</name>
    <path>Aircraft/DR400/Models/light/WhiteLight.xml</path>
    <offsets>
      <x-m> -1.749 </x-m>
      <y-m> -2.192 </y-m>
      <z-m> -0.382 </z-m>
    </offsets>
  </model>

  <!-- Wing light cone -->
  <model>
    <name>Landing-Light</name>
    <path>Aircraft/DR400/Models/light/light-cone.xml</path>
    <offsets>
      <x-m>       -1.749 </x-m>
      <y-m>       -2.192 </y-m>
      <z-m>       -0.382 </z-m>
      <pitch-deg> -7.500 </pitch-deg>
    </offsets>
  </model>

  <animation>
    <name>AllWingLight</name>
    <object-name>Wing1-Light</object-name>
    <object-name>Wing2-Light</object-name>
    <object-name>Landing-Light</object-name>
  </animation>

  <animation>
    <type>select</type>
    <object-name>AllWingLight</object-name>
    <condition>
      <and>
        <property>sim/model/lights/landing-lights</property>
        <property>sim/model/config/light-cone</property>
      </and>
    </condition>
  </animation>

</PropertyList>

