<?xml version="1.0"?>

<PropertyList>

  <path>dr400.ac</path>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/DR400/Models/Liveries", 10);
    </load>
    <unload>
      livery_update.stop();
    </unload>
  </nasal>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>echappe</object-name>
    <object-name>aile</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>voletG</object-name>
    <object-name>voletD</object-name>
    <object-name>trimprof</object-name>
    <object-name>profondeur</object-name>
    <object-name>direction</object-name>
    <object-name>roueA</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>bol</object-name>
    <object-name>toitverriere</object-name>
    <object-name>helice</object-name>
    <object-name>axeA</object-name>
    <object-name>axeG</object-name>
    <object-name>axeD</object-name>
    <object-name>cacheA</object-name>
    <object-name>cacheG</object-name>
    <object-name>cacheD</object-name>
    <object-name>tourverriere</object-name>
    <object-name>antenne</object-name>
    <object-name>protege</object-name>

    <!-- Objets transparents -->
    <object-name>verriere</object-name>
    <object-name>lampe</object-name>
    <object-name>lampetoitOn</object-name>
    <object-name>lampeGOn</object-name>
    <object-name>lampeDOn</object-name>
    <object-name>lampetoitOff</object-name>
    <object-name>lampeGOff</object-name>
    <object-name>lampeDOff</object-name>
    <object-name>vitre</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>verriere</object-name>
    <object-name>lampe</object-name>
    <object-name>lampetoitOn</object-name>
    <object-name>lampeGOn</object-name>
    <object-name>lampeDOn</object-name>
    <object-name>lampetoitOff</object-name>
    <object-name>lampeGOff</object-name>
    <object-name>lampeDOff</object-name>
    <object-name>vitre</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fuselage</object-name>
    <object-name>echappe</object-name>
    <object-name>aile</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>voletG</object-name>
    <object-name>voletD</object-name>
    <object-name>trimprof</object-name>
    <object-name>profondeur</object-name>
    <object-name>direction</object-name>
    <object-name>roueA</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>bol</object-name>
    <object-name>toitverriere</object-name>
    <object-name>helice</object-name>
    <object-name>axeA</object-name>
    <object-name>axeG</object-name>
    <object-name>axeD</object-name>
    <object-name>cacheA</object-name>
    <object-name>cacheG</object-name>
    <object-name>cacheD</object-name>
    <object-name>tourverriere</object-name>
    <object-name>antenne</object-name>
    <object-name>protege</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
  </animation>

  <!-- Interieur -->
  <model>
    <path>Aircraft/DR400/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> 0.0 </x-m>
      <y-m> 0.0 </y-m>
      <z-m> 0.0 </z-m>
      <roll-deg>    0.0 </roll-deg>
      <pitch-deg>   0.0 </pitch-deg>
      <heading-deg> 0.0 </heading-deg>
    </offsets>
  </model>

  <!-- Immatriculatoin -->
  <model>
    <path>Aircraft/DR400/Models/Immat/immat.xml</path>
    <offsets>
      <x-m> 0.0 </x-m>
      <y-m> 0.0 </y-m>
      <z-m> 0.0 </z-m>
      <roll-deg>    0.0 </roll-deg>
      <pitch-deg>   0.0 </pitch-deg>
      <heading-deg> 0.0 </heading-deg>
    </offsets>
  </model>

  <!-- L'hélice --> 
  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -3.274 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.029 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

 <!-- Gouverne de profondeur -->
 <animation>
  <type>rotate</type>
  <object-name>profondeur</object-name>
  <object-name>trimprof</object-name>
  <property>controls/flight/elevator</property>
  <interpolation>
    <entry><ind> -0.75 </ind><dep> -10.5 </dep></entry>
    <entry><ind>  0.00 </ind><dep>   0.0 </dep></entry>
    <entry><ind>  0.75 </ind><dep>  25.0 </dep></entry>
  </interpolation>
  <center>
   <x-m> 2.543 </x-m>
   <y-m> 0.000 </y-m>
   <z-m> 0.154 </z-m>
  </center>
  <axis>
   <x> 0.000 </x>
   <y> 1.000 </y>
   <z> 0.000 </z>
  </axis>
 </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>controls/flight/rudder</property>
    <interpolation>
      <entry><ind> -0.75 </ind><dep> -25.0 </dep></entry>
      <entry><ind>  0.00 </ind><dep>   0.0 </dep></entry>
      <entry><ind>  0.75 </ind><dep>  25.0 </dep></entry>
    </interpolation>
    <axis>
      <x1-m>  2.824 </x1-m>
      <y1-m>  0.000 </y1-m>
      <z1-m> -0.200 </z1-m>
      <x2-m>  3.062 </x2-m>
      <y2-m>  0.000 </y2-m>
      <z2-m>  1.113 </z2-m>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <interpolation>
      <entry><ind> -0.75 </ind><dep>  15.0 </dep></entry>
      <entry><ind>  0.00 </ind><dep>   0.0 </dep></entry>
      <entry><ind>  0.75 </ind><dep> -10.0 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -0.457 </x1-m>
      <y1-m> -2.752 </y1-m>
      <z1-m> -0.382 </z1-m>
      <x2-m> -1.058 </x2-m>
      <y2-m> -4.331 </y2-m>
      <z2-m>  0.006 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <interpolation>
      <entry><ind> -0.75 </ind><dep> -10.0 </dep></entry>
      <entry><ind>  0.00 </ind><dep>   0.0 </dep></entry>
      <entry><ind>  0.75 </ind><dep>  15.0 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -0.457 </x1-m>
      <y1-m>  2.752 </y1-m>
      <z1-m> -0.382 </z1-m>
      <x2-m> -1.058 </x2-m>
      <y2-m>  4.331 </y2-m>
      <z2-m>  0.006 </z2-m>
    </axis>
  </animation>

  <!-- Volets -->
  <animation>
    <type>rotate</type>
    <object-name>voletG</object-name>
    <object-name>voletD</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor>60.0</factor>
    <center>
      <x-m> -0.211 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.396 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Rotation de la roue avant en fonction de la gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>axeA</object-name>
    <object-name>cacheA</object-name>
    <object-name>roueA</object-name>
    <property>controls/flight/rudder</property>
    <factor> 10.0 </factor>
    <center>
      <x-m> -2.560 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.980 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y>  0.000 </y>
      <z> -1.000 </z>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueA</object-name>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -2.560 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.980 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.020 </x-m>
      <y-m> -1.236 </y-m>
      <z-m> -0.980 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.020 </x-m>
      <y-m>  1.236 </y-m>
      <z-m> -0.980 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Canopy -->
  <animation>
    <type>translate</type>
    <object-name>verriere</object-name>
    <object-name>toitverriere</object-name>
    <object-name>tourverriere</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry>
        <ind> 0.00 </ind>
        <dep> 0.00 </dep>
      </entry>
      <entry>
        <ind> 1.00 </ind>
        <dep> 0.80 </dep>
      </entry>
    </interpolation>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Essais d'ajout des effets lumineux d'après le G115 -->
  <model>
    <path>Aircraft/DR400/Models/light/beacon.xml</path>
    <offsets>
      <x-m> 0.708 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.527 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/DR400/Models/light/RedLight.xml</path>
    <offsets>
      <x-m> -1.297 </x-m>
      <y-m> -4.353 </y-m>
      <z-m>  0.005 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/DR400/Models/light/GreenLight.xml</path>
    <offsets>
      <x-m> -1.297 </x-m>
      <y-m>  4.353 </y-m>
      <z-m>  0.005 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/DR400/Models/light/Whitelight.xml</path>
    <offsets>
      <x-m> -2.574 </x-m>
      <y-m>  0.074 </y-m>
      <z-m> -0.643 </z-m>
    </offsets>
  </model>

</PropertyList>

