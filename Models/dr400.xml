      <y-m> 0.000 </y-m>
      <z-m> 0.527 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/DR400/Models/light/RedLight.xml</path>
    <offsets>
      <x-m> -1.297 </x-m>
