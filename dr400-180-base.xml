<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">

    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>

    <fuel-fraction>1.0</fuel-fraction>

    <startup>
      <splash-texture>Aircraft/DR400/Splash/dr400-180-splash.png</splash-texture>
    </startup>

    <sound>
      <path archive="y">Aircraft/DR400/Sounds/dr400-sound.xml</path>
    </sound>

    <model>
      <path archive="y">Aircraft/DR400/Models/dr400.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <flaps>
      <setting>0.00</setting>
      <setting>0.25</setting> <!-- 15 deg -->
      <setting>1.00</setting> <!-- 60 deg -->
    </flaps>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int" n="0">  0 </int>                                           <!--  0 immat -->
        <int type="int" n="1">  0 </int>                                           <!--  1 immat -->
        <int type="int" n="2">  0 </int>                                           <!--  2 immat -->
        <int type="int" n="3">  0 </int>                                           <!--  3 immat -->
        <int type="int" n="4">  0 </int>                                           <!--  4 immat -->
        <int type="int" n="5">  0 </int>                                           <!--  5 immat -->
        <int type="bool" n="6" alias="/smoke/active"> 0 </int>                     <!--  6 start smoke -->
        <int type="int" n="7" alias="smoke/particlepersec"> 50 </int>              <!--  7 particlepersec -->
        <int type="int" n="10" alias="controls/armament/trigger">0</int>           <!-- 10 reserved for bombable mode -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
        <float n="2" alias="/position/gear-agl-m"> 0 </float>                      <!-- altitude for MP shadow -->
        <float n="3" alias="/smoke/colors/knob-red">1</float>                      <!-- 3 smoke mixer red setting -->
        <float n="4" alias="/smoke/colors/knob-green">1</float>                    <!-- 4 smoke mixer green setting -->
        <float n="5" alias="/smoke/colors/knob-blue">1</float>                     <!-- 5 smoke mixer blue setting -->
        <string n="9" type="string" />                                             <!-- string[9] reserved for bombable mode -->
      </generic>
    </multiplay>

    <help>
      <title>Robin DR400 180</title>
      <key>
        <name>d</name>
        <desc>Open/Close canopy</desc>
      </key>
    </help>

    <menubar include="Dialogs/dr400-menu.xml"/>

    <weight n="0">
        <name>Pilot</name>
        <weight-lb>200</weight-lb>
        <max-lb>250</max-lb>
        <min-lb>100</min-lb>
    </weight>

    <weight n="1">
        <name>Copilot</name>
        <weight-lb>200</weight-lb>
        <max-lb>250</max-lb>
        <min-lb>0</min-lb>
    </weight>

    <weight n="2">
        <name>Pax</name>
        <weight-lb>0</weight-lb>
        <max-lb>250</max-lb>
        <min-lb>0</min-lb>
    </weight>

    <weight n="3">
        <name>Cargo</name>
        <weight-lb>0</weight-lb>
        <max-lb>250</max-lb>
        <min-lb>0</min-lb>
    </weight>

  </sim>
 
  <input>
    <keyboard include="Nasal/dr400-keyboard.xml"/>
  </input>
 
  <nasal>
    <doors>
      <file>Aircraft/DR400/Nasal/doors.nas</file>
    </doors>
    <dr400>
      <file>Aircraft/DR400/Nasal/light.nas</file>
      <file>Aircraft/DR400/Nasal/liveries.nas</file>
      <file>Aircraft/DR400/Nasal/immat.nas</file>
      <file>Aircraft/DR400/Nasal/dr400.nas</file>
      <file>Aircraft/DR400/Nasal/rpm.nas</file>
    </dr400>
  </nasal>
   
</PropertyList>

